@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Service", FormMethod.Post))
{
    //this  is for create form tag
    @Html.AntiForgeryToken()

    // this is for prevent CSRF attack
    @Html.ValidationSummary(true)

    <div class="main_container">
        <div class="login_scrn" ng-app="service" ng-controller="LoginController as loginCtrl" style="vertical-align:middle; text-align:center">
            <div class="row">
                <div class="col-md-8">
                    <img src="~/Content/Images/bee_logo.gif" width="300" height="300" style="vertical-align:central" />
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="well login-box">
                                <form name="loginForm" action="/Service/Login" method="post">
                                    <div class="form-group">
                                        <label for="username">E-mail ID</label>
                                        <input id="inputEmail" type="text" name="Username" class="form-control" placeholder="Username" ng-model="username" required="" />
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input id="inputPassword" type="password" name="Password" class="form-control" placeholder="Password" ng-model="password" required="" />
                                    </div>
                                    <div class="form-group">
                                        <input id="btnSubmit" value="Login" type="submit" class="btn btn-primary form-control" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
